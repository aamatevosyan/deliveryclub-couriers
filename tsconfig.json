{
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "target": "esnext",
//    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
//    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ]
    },
    "plugins": [
      {
        "name": "@vuedx/typescript-plugin-vue"
      }
    ],
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/session",
      "@adonisjs/view",
      "@adonisjs/shield",
      "@adonisjs/redis",
      "@adonisjs/lucid",
      "@eidellev/inertia-adonisjs"
    ],
    "lib": [
      "dom"
    ]
  }
}
